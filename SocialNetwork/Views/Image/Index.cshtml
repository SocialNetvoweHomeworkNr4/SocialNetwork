@model SocialNetwork.ViewModels.Image.UserImagesViewModel

@{
    ViewBag.Title = "User Image Gallery";
}

@Styles.Render("~/bundles/jquery-file-upload/css")

<h2>User Image Gallery</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="container">
            <br>
            <span class="btn btn-success fileinput-button">
                <i class="glyphicon glyphicon-plus"></i>
                <span>Select file...</span>
                <input id="fileupload" type="file" name="files[]" multiple>
            </span>
            <br>
            <br>
            <div id="progress" class="progress">
                <div class="progress-bar progress-bar-success"></div>
            </div>
            <div id="files" class="files"></div>
            <br>
        </div>
    </div>
</div>

<div class="row">
    @{
        int counter = 1;
    
        foreach (var image in Model.Images)
        {
            <div class="col-sm-3">
                <a href="" class="image-href" data-userId="@Model.UserId" data-image="@image.ImageID"><img class="user-image" src="/Images/@image.FileName" /></a>
            </div>

            if (counter % 4 == 0)
            {
                <div class="clearfix custom-class"></div>
            } 

            counter++;
        }
    
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jquery-file-upload/js")

    <script>
        $(function () {
            images.init({ userId: @Model.UserId })
        });
    </script>
}

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>

<script id="image-template" type="text/x-handlebars-template">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{Comment}}</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="row">
                    <div class="col-sm-offset-1 col-sm-10">
                        <img class="large-image" src="/Images/{{ImageName}}" />
                    </div>
                </div>
            </div>
        </div>
        {{#each Comments}}
        <div class="row">
            <div class="col-sm-offset-1 col-sm-10">
                <blockquote>
                    <p>
                        {{Text}}
                        <footer>{{AuthorName}} - {{Date}}</footer>
                </blockquote>
            </div>
        </div>
        {{/each}}
        
    </div>
</script>